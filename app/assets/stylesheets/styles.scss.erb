@import 'variables';

html,
body,
main, 
#map-canvas {
  margin: 0px;
  height: 100%;
  padding: 0px;
  overflow: hidden;
  // background: $tab-bg-color;
}

#map-canvas {
	margin-left: $sidebar-tabs-width;
}

* {
	box-sizing: border-box;
}

header {
	@include noselect;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	z-index: 3;
	height: $header-height;
	list-style: none;
	line-height: $header-height / 2;
	padding: 10px;
	background: $header-bg-color;

	.logo {
		font-size: 1.8em;
		font-family: 'Shadows Into Light', cursive;
	}

	li, a {
		display: inline-block;
		text-decoration: none;
		color: $font-color-offwhite;
		padding-right: 5px;
	}
	nav {
		float: right;
	}
}

